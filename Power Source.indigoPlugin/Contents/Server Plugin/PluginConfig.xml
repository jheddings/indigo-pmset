<?xml version="1.0"?>
<PluginConfig>
  <SupportURL>http://forums.indigodomo.com/viewforum.php?f=234</SupportURL>

  <Field id="stdUpdateInt" type="textfield" defaultValue="10">
    <Label>Standard Update Interval:</Label>
  </Field>
  <Field id="stdUpdateIntHelp" type="label" fontSize="mini" alignWithControl="true">
    <Label>(required) standard polling interval in minutes; sane values are 5-60</Label>
  </Field>

  <Field id="critUpdateInt" type="textfield" defaultValue="5">
    <Label>Critical Update Interval:</Label>
  </Field>
  <Field id="critUpdateIntHelp" type="label" fontSize="mini" alignWithControl="true">
    <Label>(required) critical polling interval in minutes; sane values are 1-10</Label>
  </Field>

  <Field id="separator1" type="separator" />

  <Field id="logLevel" type="menu" defaultValue="20">
    <Label>Event Logging Level:</Label>
    <List>
      <Option value="10">Debugging Messages</Option>
      <Option value="20">Informational Messages</Option>
      <Option value="30">Warning Messages</Option>
      <Option value="40">Error Messages</Option>
      <Option value="50">Critical Errors Only</Option>
    </List>
  </Field>
</PluginConfig>
